@{
    // Set the title of the page to "Login or Register" which will be reflected in the browser tab
    ViewData["Title"] = "Login or Register";
}

<!-- The header of the page displaying the title "Login or Register" -->
<h1>Login or Register</h1>

<!-- Container for the Login and Register buttons, displayed in a horizontal row with some spacing between them -->
<div style="display: flex; gap: 10px; margin-top: 20px;">

    <!-- Button that links to the Login action in the Account controller, styled with Bootstrap's "primary" class -->
    <a asp-action="Login" asp-controller="Account" class="btn btn-primary">Login</a>

    <!-- Button that links to the Register action in the Account controller, styled with Bootstrap's "secondary" class -->
    <a asp-action="Register" asp-controller="Account" class="btn btn-secondary">Register</a>

</div>
