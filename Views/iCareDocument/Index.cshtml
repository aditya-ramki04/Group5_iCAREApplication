@model IEnumerable<iCareWebApplication.Models.iCareDocument>

@{
    ViewData["Title"] = "Documents List";
}

<h2>Documents List</h2>

<!-- Action Buttons -->
<div class="mb-2">
    <a asp-action="CreateDocument" class="btn btn-primary">Create Document</a>
    <button type="submit" form="documentForm" class="btn btn-danger">Delete Selected</button>
</div>

<!-- Document List Form to handle the checkbox selection -->
<form id="documentForm" asp-action="DeleteSelected" method="post">
    <table class="table mt-4">
        <thead>
            <tr>
                <th>Select</th>
                <th>Document ID</th>
                <th>Patient ID</th>
                <th>Description</th>
                <th>File Path</th>
                <th>Created By</th>
                <th>Creation Date</th>
                <th>Last Modified</th>
                <th>Modified By</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var doc in Model)
            {
                <tr>
                    <td>
                        <input type="checkbox" name="selectedDocumentIds" value="@doc.iCareDocumentId" />
                    </td>
                    <td>@doc.iCareDocumentId</td>
                    <td>@doc.PatientId</td>
                    <td>@doc.Description</td>
                    <td>@doc.FilePath</td>
                    <td>@doc.CreatedBy</td>
                    <td>@doc.CreationDate</td>
                    <td>@doc.LastModified</td>
                    <td>@doc.ModifiedBy</td>
                    <td>
                        <a asp-action="EditDocument" asp-route-id="@doc.iCareDocumentId" class="btn btn-warning">Edit</a>
                        <a asp-action="Download" asp-route-id="@doc.iCareDocumentId" class="btn btn-secondary">Download</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</form>

@section Scripts {
    <script>
        document.getElementById("documentForm").onsubmit = function () {
            const selectedCount = document.querySelectorAll('input[name="selectedDocumentIds"]:checked').length;
            if (selectedCount === 0) {
                alert("No documents selected for deletion.");
                return false;
            }
            return confirm('Are you sure you want to delete the selected documents?');
        };
    </script>
}