@model IEnumerable<iCareWebApplication.Models.iCareDocument>

@{
    ViewData["Title"] = "Role List";
}

<h2>Role List</h2>

<!-- Table to display the list of roles -->
<table class="table">
    <thead>
        <tr>
            <!-- Table header for Role ID column -->
            <th>Role ID</th>
        </tr>
    </thead>
    <tbody>
        <!-- Loop through each role in the model and display the Role ID -->
        @foreach (var role in Model)
        {
            <tr>
                <!-- Display the Role ID for each role in a table row -->
                <td>@role.iCareDocumentId</td>
            </tr>
        }
    </tbody>
</table>

<p>
    <!-- Link to navigate to the "Create" action for adding a new role -->
    <a asp-action="Create" class="btn btn-primary">Add New Role</a>
</p>
