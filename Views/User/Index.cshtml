@model IEnumerable<iCareWebApplication.Models.User>

@{
    ViewData["Title"] = "Users";
}

<h1>Users</h1>

    <a asp-action="Register" asp-controller="Account" class="btn btn-secondary">Register</a>

<form method="post" asp-action="DeleteSelected">
    <table class="table">
        <thead>
            <tr>
                <th></th>
                <th>Name</th>
                <th>Email</th>
                <th>Employee Type</th>
                <th>Account Status</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var user in Model)
            {
                <tr>
                    <td><input type="checkbox" name="selectedUserIds" value="@user.UserId" /></td>
                    <td>@user.FullName</td>
                    <td>@user.Email</td>
                    <td>@user.RoleID</td>
                    <td>@user.AccountStatus</td>
                </tr>
            }
        </tbody>
    </table>

    <button type="submit" class="btn btn-danger">Delete Selected Users</button>
</form>
