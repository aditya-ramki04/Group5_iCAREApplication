@model IEnumerable<iCareWebApplication.Models.PatientAssignment>

@{
    // Set the title of the page to "PatientAssignment List"
    ViewData["Title"] = "PatientAssignment List";
}

<!-- Heading for the Patient Assignment List page -->
<h2>Patient Assignment</h2>

<!-- Table to display the list of patient assignments -->
<table class="table">
    <thead>
        <tr>
            <!-- Table headers: PatientAssignmentID, PatientID, and Active -->
            <th>PatientAssignmentID</th>
            <th>PatientID</th>
            <th>Active</th>
        </tr>
    </thead>
    <tbody>
        <!-- Loop through each patient assignment in the Model and display their details -->
        @foreach (var patient in Model)
        {
            <tr>
                <!-- Display the PatientAssignmentId, PatientId, and Active status for each patient -->
                <td>@patient.PatientAssignmentId</td>
                <td>@patient.PatientId</td>
                <td>@patient.Active</td>
            </tr>
        }
    </tbody>
</table>

<!-- Button to navigate to the Create page to add a new role (PatientAssignment) -->
<p>
    <a asp-action="Create" class="btn btn-primary">Add New Role</a>
</p>
